<section id="register-page">
  <div class="registerSection">
    <div class="info-register">
      <h2>"I hope you're pleased with yourselves. We could all have been expelled. Now if you don't mind, I'm going to bed."</h2>
    </div>
    <form method="POST" class="registerForm">
      <h2>Register</h2>
      <ul class="noBullet">
        <li {{#if errors.email}}class="error"{{/if}}>
          <label for="email">Email:</label>
          <input
            type="text"
            class="inputFields"
            id="email"
            name="email"
           {{#if errors.email}} value="{{input.email}}"{{/if}}
          />
        </li>
        <li {{#if errors.password}}class="error"{{/if}}>
          <label for="password">Password:</label>
          <input
            type="password"
            class="inputFields"
            id="password"
            name="password"
          />
        </li>
        <li {{#if errors.repeatPw}}class="error"{{/if}}>
          <label for="repeat-password">Repeat-Password:</label>
          <input
            type="password"
            class="inputFields"
            id="repeat-password"
            name="repeatPw"
          />
        </li>
        <li id="center-btn">
          <button id="join-btn">Register</button>
        </li>
      </ul>
    </form>
  </div>
</section>